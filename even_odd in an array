#include<stdio.h>
int main()
{
    int a[20],i,size;
    int sum=0;
    printf("enter the size of array\n");
    scanf("%d",&size);
    printf("enter the array elements\n");
    for(i=0;i<size;i++)
    {
        scanf("%d",&a[i]);
        if(a[i]%2==0)
        printf("element is even: %d\n",a[i]);
        else
        printf("element is odd: %d\n",a[i]);
        
    }
    
}
